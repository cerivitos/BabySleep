{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "headers": { "cache-control": "max-age=0,must-revalidate" },
      "dest": "dist/$1"
    }
  ],
  "build": {
    "env": {
      "CLIENT_ID": "@client_id",
      "API_KEY": "@api_key",
      "SCOPES": "@scopes",
      "DISCOVERY_DOCS": "@discovery_docs",
      "SPREADSHEET_ID": "@spreadsheet_id",
      "SHEET_NAME": "@sheet_name",
      "SHEET_ID": "@sheet_id"
    }
  }
}
