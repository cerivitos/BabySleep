{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "headers": { "cache-control": "max-age=0,must-revalidate" },
      "dest": "dist/$1"
    }
  ],
  "env": {
    "CLIENT_ID": "@CLIENT_ID",
    "API_KEY": "@API_KEY",
    "SCOPES": "@SCOPES",
    "DISCOVERY_DOCS": "@DISCOVERY_DOCS",
    "SPREADSHEET_ID": "@SPREADSHEET_ID",
    "SHEET_NAME": "@SHEET_NAME",
    "SHEET_ID": "@SHEET_ID"
  }
}
